
<div class="container my-form-container mb-5 mt-5">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <form action="/auth/login" method="POST">
        <div class="form-row">
          <div class="col-lg-12">
            <label for="auth-email">Email</label>
            <input id="auth-email" type="email" name="email" class="form-control">
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-12">
            <label for="auth-password">Password</label>
            <input id="auth-password" type="password" name="password" class="form-control">
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-12">
            <input type="submit" value="Log In" class="btn1 mt-3 mb-3" >
          </div>
        </div>
      </form>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>