<% if (!currentUser) { %>
    <p id="text-1"> JOIN! See other people's activities</p>
<% } else { %>
    <div id="members-container">
    <p id="text-3"> See activities of other people in community</p>
    <% for (let i=0; i < users.length; i++){ %>
        <% if (users[i].name !== currentUser.name){ %>
            <a  id= "members" href='/otherProfiles/<%=users[i].id %>'><i class="fas fa-user"></i>  <%= users[i].name %></a>
        <% } %>
    <% } %>
    </div>
<% } %>



