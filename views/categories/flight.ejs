<div id="page-container">
    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row myrow">
                <div class="col-lg-5">
                    <div class="img-con">
                        <img class="img-form" src="../../assets/flightpage.jpg" class="img-fluid" alt="">
                    </div>
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <% if(!currentUser) { %>
                        <form action="/result" method= "POST">  
                    <% } else { %>
                        <form action="/users/result/<%=category %>" method= "POST">
                    <% } %> 
                        <div class="form-row">
                            <div class="col-lg-10">
                                <h3 id='text-1'>FLIGHT</h3>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="title">Activity Title</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="text" id="title" name="title" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label for="country">Country</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <select type="text" id="country" name="country" class="form-control">
                                            <option>usa</option>
                                            <option>gbr</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <input type="radio" id="economyFlight" name="mode" value="economyFlight">
                                        <label for="economyFlight">Economy Flight</label>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="radio" id="businessFlight" name="mode" value="businessFlight">
                                        <label for="businessFlight">Bussiness Flight</label>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="radio" id="firstClassFlight" name="mode" value="firstclassFlight">
                                        <label for="firstClassFlight">First Class Flight</label>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <label for="amount">Amount</label>
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="text" id="amount" name="activity" class="form-control">
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="radio" id="miles" name="activityType" value="miles">
                                        <label for="miles">miles</label>
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="radio" id="fuel" name="activityType" value="fuel">
                                        <label for="fuel">fuel</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <label for="diesel">If you chosen fuel above, choose fuel type</label>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <input type="radio" id="diesel" name="fuelType" value="diesel">
                                        <label for="diesel">Diesel</label>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="radio" id="aviationGasoline" name="fuelType" value="aviationGasoline">
                                        <label for="aviationGasoline">Aviation Gasoline</label>
                                    </div>
                                    <div class="col-lg-4">
                                        <input type="radio" id="jetFuel" name="fuelType" value="jetFuel">
                                        <label for="jetFuel">Jet Fuel</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-lg-10">
                                <button type="submit" class="btn1 mt-3 mb-5">Calculate</button>
                            </div>
                        </div>
                </div>  
            </div>
        </div>
    </section>
</div>
