<h3>FLIGHT</h3>

<form action="../users/result" method= "POST">
    <div>
        <label for="title">Activity Title</label>
        <input type="text" id="title" name="title">
    </div>
    <div>
        <label for="country">Country</label>
        <input type="text" id="country" name="country">
    </div>
    <div>
        <input type="radio" id="economyFlight" name="mode" value="economyFlight">
        <label for="economyFlight">Economy Flight</label>
        <input type="radio" id="businessFlight" name="mode" value="businessFlight">
        <label for="businessFlight">Bussiness Flight</label>
        <input type="radio" id="firstClassFlight" name="mode" value="firstClassFlight">
        <label for="firstClassFlight">First Class Flight</label>
    </div>
    <div>
        <label for="amount">Amount</label>
        <input type="text" id="amount" name="activity">
    
        <input type="radio" id="miles" name="activityType" value="miles">
        <label for="miles">miles</label>
        <input type="radio" id="fuel" name="activityType" value="fuel">
        <label for="fuel">gallons</label>

    </div>
    <div>
        <input type="submit">
    </div>
    
</form>